<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <%= link_to 'Photo Blog', pictures_path , :class => "btn btn-primary" %>
        <%= link_to 'View Profile', user , :class => "btn btn-info" %>
        <%= link_to 'Edit Profile', edit_user_path(user) , :class => "btn btn-warning" %>
        <%= link_to 'Delete Account', user, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Account', new_user_path , :class => "btn btn-info" %>
