<h1>My Photo Blog</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= image_tag picture.avatar.url %></td>
        <td><%= link_to 'Show', picture, :class => "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture), :class => "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Delete', picture, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Picture', new_picture_path , :class => "btn btn-success" %>
<%= link_to 'Back', pictures_path, :class => "btn btn-warning" %>
